<MudDialog DefaultFocus="DefaultFocus.LastChild">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccessTime" Class="mr-3 mb-n1" />
            Select export period
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_isValid">
            <MudDateRangePicker PickerVariant="PickerVariant.Static" Required @bind-DateRange="@DateRange" Margin="Margin.Dense" Color="Color.Primary" CheckMark="true" FixedContent="true" />
            <MudText Typo="Typo.body2" Color="Color.Error">@_validationMessage</MudText>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Cancel</MudButton>
        <MudButton StartIcon="@Icons.Custom.FileFormats.FileExcel" Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Export</MudButton>
    </DialogActions>
</MudDialog>
