<MudDialog xs="12">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3 mb-n1" />
            Delete brands
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudText>Are you sure you want to delete @_brandState.Value.DeleteDialogState.Brands?.Count() brands?</MudText>
            </MudItem>
            <MudDivider/>
                <MudItem xs="12">
                    @if (_isLoading)
                    {
                        <Loader />
                    }
                    else
                    {
                        foreach (var overview in _brandState.Value.DeleteDialogState.Overviews) 
                        {
                            <BrandDeletionOverview Model="@overview"></BrandDeletionOverview>
                            <MudDivider />
                        }
                    }
                </MudItem>
                @if (!_brandState.Value.DeleteDialogState.IsDeleteButtonEnabled) 
                {
                    <MudItem xs="12">
                        <MudText Class="text-align-right display-block" Color="Color.Error" Typo="Typo.overline">Can not delete any of the selected brands. Please fix the issues first.</MudText>
                    </MudItem>
                }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel" StartIcon="@Icons.Material.Filled.Cancel">Cancel</MudButton>
        <MudButton Disabled="!_brandState.Value.DeleteDialogState.IsDeleteButtonEnabled" OnClick="@OnDelete" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Variant="Variant.Filled">Delete</MudButton>
    </DialogActions>
</MudDialog>