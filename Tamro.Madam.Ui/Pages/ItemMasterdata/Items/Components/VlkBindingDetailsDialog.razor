@using Tamro.Madam.Models.ItemMasterdata.Items.Bindings

<MudDialog xs="6" DefaultFocus="DefaultFocus.FirstChild">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Link" Class="mr-3 mb-n1" />
            @GetTitle()
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model" @ref="@_form" onkeydown="@OnKeyDown" Validation="@(_validator.ValidateValue(Model))">
            <MudGrid>
                <MudItem Class="pb-3" xs="12">
                    <MudTextField Label="@DisplayNameHelper.Get(() => Model.NpakId7)" @bind-Value="Model.NpakId7"
                        Immediate="true"
                        Disabled="!_userProfileState.Value.HasPermission(Permissions.CanManageVlkBindings)"
                        Variant="Variant.Outlined"
                        FullWidth="true"
                        For="@(() => Model.NpakId7)"
                        Required="true">
                    </MudTextField>
                </MudItem>
                <MudItem Class="pb-3" xs="12">
                    <MudAutocomplete Label="@DisplayNameHelper.Get(() => Model.ItemBinding)"
                                     T="ItemBindingClsfModel"
                                     MaxItems="20"
                                     ResetValueOnEmptyText
                                     Immediate
                                     Required
                                     Margin="Margin.Dense"
                                     Clearable
                                     Disabled="@(!_userProfileState.Value.HasPermission(Permissions.CanManageVlkBindings))"
                                     SearchFunc="@SearchItemBindings"
                                     DebounceInterval="200"
                                     ToStringFunc="@(ib => ib == null || string.IsNullOrEmpty(ib.Name) ? string.Empty : $"{ib.ItemNo2} - {ib.Name}")"
                                     For="@(() => Model.ItemBinding)"
                                     ProgressIndicatorColor="Color.Primary"
                                     @bind-Value="Model.ItemBinding"
                                     Variant="Variant.Outlined"
                                     ShowProgressIndicator="true">
                    </MudAutocomplete>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Cancel</MudButton>
        <MudLoadingButton StartIcon="@Icons.Material.Filled.Save" Disabled="!_userProfileState.Value.HasPermission(Permissions.CanManageVlkBindings)" Variant="Variant.Filled" Color="Color.Primary" Loading="@_saving" OnClick="Submit">Save</MudLoadingButton>
    </DialogActions>
</MudDialog>